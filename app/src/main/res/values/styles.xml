<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:fontFamily">@font/font_roman</item>
    </style>
    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:fontFamily">@font/font_roman</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nav_bar_image">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="nav_bar_text">
        <item name="android:textColor">@color/def_text_color</item>
        <item name="android:textSize">@dimen/mid_text</item>
    </style>

    <style name="container_card_view">
        <item name="android:layout_marginStart">0sp</item>
        <item name="android:layout_marginEnd">0sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="field_title">
        <item name="android:textColor">@color/blue_grey_500</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="field_info">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
    </style>

    <style name="title_info_container">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_field_title">
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_300</item>
    </style>

    <style name="checkbox_container">
        <item name="android:padding">10dp</item>
    </style>

    <style name="checkbox_text">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/def_text_color</item>
    </style>

    <color name="def_text_color">@color/blue_grey_600</color>
</resources>
