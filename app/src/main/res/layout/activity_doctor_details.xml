<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/white"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_color="@color/blue_grey_600"
            app:civ_border_width="2dp"
            android:id="@+id/image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Dr.Nemo"
            android:textColor="@color/black"
            android:textSize="@dimen/xlarge_text"/>

        <include layout="@layout/social_media_circles"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/container_card_view"
        android:layout_marginTop="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/doctor_menu"
                            android:tint="@color/iconColor"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_900"
                            android:textSize="@dimen/large_text"
                            android:text="@string/doctor_info"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/title_info_container">

                            <TextView
                                style="@style/field_title"
                                android:text="@string/specialization"/>

                            <TextView
                                android:layout_width="@dimen/colon_width"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:gravity="center"/>

                            <TextView
                                style="@style/field_info"
                                android:text="dfdsfdsfsdfdfsffsfs"
                                android:id="@+id/specialization"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/title_info_container">

                            <TextView
                                style="@style/field_title"
                                android:text="@string/country"/>

                            <TextView
                                android:layout_width="@dimen/colon_width"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:gravity="center"/>

                            <TextView
                                style="@style/field_info"
                                android:text="dfdsfdsfsdfdfsffsfs"
                                android:id="@+id/country"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/title_info_container">

                            <TextView
                                style="@style/field_title"
                                android:text="@string/city"/>

                            <TextView
                                android:layout_width="@dimen/colon_width"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:gravity="center"/>

                            <TextView
                                style="@style/field_info"
                                android:text="dfdsfdsfsdfdfsffsfs"
                                android:id="@+id/city"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            style="@style/title_info_container">

                            <TextView
                                style="@style/field_title"
                                android:text="@string/phone"/>

                            <TextView
                                android:layout_width="@dimen/colon_width"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:gravity="center"/>

                            <TextView
                                style="@style/field_info"
                                android:text="dfdsfdsfsdfdfsffsfs"
                                android:id="@+id/phone"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/graduation"
                            android:tint="@color/iconColor"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_900"
                            android:textSize="@dimen/large_text"
                            android:text="@string/doctor_degrees"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/degrees"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>




</LinearLayout>