<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@color/grey_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:cardElevation="@dimen/toolbar_elevation"
            app:elevation="@dimen/toolbar_elevation"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbar"
                app:contentInsetStart="0dp"
                android:background="@color/iconColor"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/toolbar_bg"
                    >


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/white"
                        android:id="@+id/close"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:textSize="@dimen/xlarge_text"
                        android:textColor="@color/white"/>


                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="16dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/white"
                        android:id="@+id/expanded_menu"
                        />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/send_text_msg"
                android:elevation="1dp"
                android:layout_marginStart="12dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/circle_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:tint="@color/white"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginEnd="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="18dp"
                android:layout_marginStart="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/txt_msg_ed"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColorHint="@color/text_color_1"
                        android:textColor="@color/grey_900"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:textSize="@dimen/mid_text"
                        android:hint="@string/write_msg"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLines="4"

                        />

                    <ImageView
                        android:id="@+id/send_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_image_black_36dp"
                        android:tint="@color/blue_grey_600"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>