<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="1dp"
    android:layout_marginStart="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--/////////////////////////-->
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/font_bold"
                android:textSize="@dimen/large_text"
                android:textColor="@color/colorAccent"
                android:id="@+id/take_time"
                android:text="8:00 pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <FrameLayout
                android:id="@+id/delete"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_delete_forever_black_36dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/missd"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </FrameLayout>




            <android.support.v7.widget.SwitchCompat
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/switcher"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/done"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_done_active"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </FrameLayout>

        </LinearLayout>
        <!--//////////////////////////-->
        <View
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/pills"
                android:layout_margin="8dp"
                android:src="@drawable/pills"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/font_bold"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/grey_800"
                    android:id="@+id/name"
                    android:text="8:00 pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="-8dp"
                    android:textSize="@dimen/mid_text"
                    android:textColor="@color/grey_800"
                    android:id="@+id/take_number"
                    android:text="@string/take"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            
            <ImageView
                android:id="@+id/taken_img"
                android:visibility="visible"
                android:layout_margin="8dp"
                android:src="@drawable/ic_check_circle_black_48dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>