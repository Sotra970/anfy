<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/container_card_view">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/telephone_contact"
                            android:tint="@color/iconColor"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/iconColor"
                            android:textSize="@dimen/large_text"
                            android:text="@string/settings_contact_us"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            style="@style/title_info_container"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_call_black_24dp"
                                android:tint="@color/iconColor"/>

                            <TextView
                                style="@style/field_title"
                                android:text="@string/phone"/>

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:gravity="start"/>

                            <TextView
                                style="@style/field_info"
                                android:gravity="right"
                                android:id="@+id/phone"/>

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/call"
                                android:gravity="center"
                                android:background="@drawable/circle_bg">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/dummy_icon"
                                    android:tint="@color/white"/>

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_200"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            style="@style/title_info_container"
                            >

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_print_black_36dp"
                                android:tint="@color/iconColor"/>

                            <TextView
                                style="@style/field_title"
                                android:text="@string/fax"/>

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:gravity="start"/>

                            <TextView
                                style="@style/field_info"
                                android:gravity="right"
                                android:id="@+id/fax"/>

                            <LinearLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:visibility="invisible"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_200"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            style="@style/title_info_container">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_email_black_36dp"
                                android:tint="@color/iconColor"/>

                            <TextView
                                style="@style/field_title"
                                android:text="@string/email"/>

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:text="@string/colon"
                                android:gravity="start"/>

                            <TextView
                                style="@style/field_info"
                                android:gravity="right"
                                android:id="@+id/email"/>

                            <LinearLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:visibility="invisible"
                                />


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_200"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/network"
                            android:tint="@color/iconColor"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_900"
                            android:textSize="@dimen/large_text"
                            android:textStyle="bold"
                            android:text="@string/stay_connected"/>

                    </LinearLayout>

                    <include layout="@layout/social_media_circles"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:id="@+id/suggest"
                    >

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_help_black_48dp"
                        android:tint="@color/iconColor"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_suggestion"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:tint="@color/iconColor"
                        android:src="@drawable/ic_keyboard_arrow_left_black_36dp"/>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>